@{
    Layout = null; ViewData["Title"] = "Login";
}
<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HelpDesk PIM</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="login-page-body">
    <div class="login-container">
        <div class="login-header"><h1>Sistema de Chamados</h1></div>
        <div class="login-content">
            <div asp-validation-summary="All" class="alert-danger"></div>
            <form asp-action="Login" method="post">
                <div class="form-group">
                    <label>Email</label>
                    <input name="email" type="email" class="form-control" required />
                </div>
                <div class="form-group">
                    <label>Senha</label>
                    <input name="password" type="password" class="form-control" required />
                </div>
                <button type="submit" class="login-button">Entrar</button>
            </form>
            <div class="login-footer">
                <p>Não tem uma conta? <a asp-controller="Account" asp-action="Register">Cadastre-se aqui</a></p>
            </div>
        </div>
    </div>
</body>
</html>
