@{
    Layout = null; ViewData["Title"] = "Cadastro";
}
<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HelpDesk PIM</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="login-page-body">
    <div class="register-container">
        <div class="register-header"><h1>Cadastro de Funcionário</h1></div>
        <div class="register-content">
            <div asp-validation-summary="All" class="alert-danger"></div>
            <form asp-action="Register" method="post">
                <div class="form-group">
                    <label>Nome</label>
                    <input name="nome" class="form-control" required />
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <input name="email" type="email" class="form-control" required />
                </div>
                <div class="form-group">
                    <label>Senha (mínimo 6 caracteres)</label>
                    <input name="password" type="password" class="form-control" required />
                </div>
                <button type="submit" class="register-button">Cadastrar</button>
            </form>
            <div class="register-footer">
                <p>Já tem uma conta? <a asp-controller="Account" asp-action="Login">Faça Login</a></p>
            </div>
        </div>
    </div>
</body>
</html>
