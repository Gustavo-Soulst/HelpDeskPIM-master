@model Chamado
@{
    ViewData["Title"] = "Novo Chamado";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>
    <hr />
    <form asp-action="Create" method="post">
        <div asp-validation-summary="ModelOnly" class="alert-danger"></div>
        <div class="form-group">
            <label asp-for="Titulo" class="control-label"></label>
            <input asp-for="Titulo" class="form-control" />
            <span asp-validation-for="Titulo" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Descricao" class="control-label"></label>
            <textarea asp-for="Descricao" class="form-control" rows="4"></textarea>
        </div>
        <div class="form-group">
            <button type="submit" class="btn-primary">Criar Chamado</button>
            <a asp-action="Index" style="margin-left: 10px;">Cancelar</a>
        </div>
    </form>
</div>
